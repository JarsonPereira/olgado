@{
    ViewBag.Title = "Início";
}

<div class="wrapper-container" ng-controller="olgadoController">
    <div class="container">
        <div class="wrapper-content">
            <div class="filters-container">
                <div class="row">
                    <div class="col s4">
                        <select multiple>
                            <option value="" disabled selected>Escolha a raça</option>
                            <option value="1">Nelore</option>
                            <option value="2">Raça 2</option>
                            <option value="3">Raça 3</option>
                        </select>
                    </div>
                    <div class="col s4">
                        <select multiple>
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">Option 1</option>
                            <option value="2">Option 2</option>
                            <option value="3">Option 3</option>
                        </select>
                    </div>
                    <div class="col s4">
                        <select multiple>
                            <option value="" disabled selected>Choose your option</option>
                            <option value="1">Option 1</option>
                            <option value="2">Option 2</option>
                            <option value="3">Option 3</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="ads-container">
                <div class="ad-container">
                    <div class="col s12 m7">
                        <div class="card horizontal">
                            <div class="card-image">
                                <img src="~/Content/olgado/img/boi-01.jpg" />
                            </div>
                            <div class="card-stacked">
                                <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4">Boi nelore gordão {{nome}}</span>
                                    <p class="local">@*<i class="material-icons left">place</i>*@Araguaína - TO</p>
                                </div>
                                <div class="card-action">
                                    <p class="price">R$ 2000</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>